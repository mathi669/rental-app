<div class="container bootdey mt-5">
<div class="col-md-12">
<section class="panel">
      <div class="panel-body row">
          <div class="col-md-6">
              <div class="pro-img-details ">
                  <img src="{{data.img}}" alt="">
              </div>
             
          </div>
          <div class="col-md-6">
              <h4 class="pro-d-title">
                  {{data.nombre}}
              </h4>
              <p>
                  Praesent ac condimentum felis. Nulla at nisl orci, at dignissim dolor, The best product descriptions address your ideal buyer directly and personally. The best product descriptions address your ideal buyer directly and personally.
              </p>
              <div class="product_meta ">
                  <span class="posted_in"> <strong>Categories:</strong> {{data.categoria}}
                  <span class="tagged_as"><strong>Autor:</strong> {{data.autor}}
              </div>
              <div class="product_meta ">
                  <span class="posted_in"> <strong>Editorial:</strong> {{data.editorial}}
                  <span class="tagged_as"><strong>Edicion:</strong> {{data.edicion}}
              </div>
              <div class="m-bot15"> <strong>Price : </strong> ${{data.precio}}
             <strong>Stock: </strong> {{data.unidades}}
             <button class="btn btn-round btn-danger mt-2" onclick="borrarLibro({{data.idlibro}})">
                Eliminar
             </button>
             <a href="/edit/{{data.idlibro}}">Editar</a>
        
             <form action="" class="mt-2">

              <div class="form-group">
                  <label>Cantidad</label>
                  <input type="number" placeholder="1" class="form-control quantity">
              </div>
              <p>
                  <button class="btn btn-round btn-danger mt-2" type="button"><i class="fa fa-shopping-cart"></i> Rent</button>
              </p>
             </form>
          </div>
      </div>
  </section>
  </div>
  </div>
  <script>
        function borrarLibro(id){
            fetch('/delete/'+ id,{method:'delete'})
            .then((res) => {
                return res.json()
            })
            .then((data) => {
                location.href = '/'
            })
        }
  </script>