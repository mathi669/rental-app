<section class="py-5">
   <div class="container mt-2 mt-1">
      <form action="/" method="get">
        <input type="text" name="bus">
        <button type="submit" class="btn btn-success">Search</button>
      </form>
  </div>

  {{#if xbus}}
  <div class="container" id="alert">
    <div class="bg-danger text-center py-2 mt-2" style="border-radius: 12px;">
      <p class="text-white">No hay coincidencia</p>
    </div>
  </div>
  {{/if}}

  <div class="container px-4 px-lg-5 mt-5">
    <div
      class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center"
    >
    {{#each data}}
      <div class="col mb-5">
        <div class="card h-100">
          <img
            class="card-img-top"
            src="{{this.img}}"
            alt="..."
          />
          <div class="card-body p-4">
            <div class="text-center">

              <h5 class="fw-bolder">{{this.nombre}}</h5>
              <h6 class="fw">{{this.autor}}</h6>
              <h6>{{formatDate this.a√±o_publicacion}}</h6>

              ${{this.precio}}
            </div>
          </div>

          <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center"><a
                class="btn btn-outline-dark mt-auto"
                href="/details/{{this.idlibro}}"
              >View options</a></div>
          </div>
        </div>
      </div>
      {{/each}}
   </div>
  </div>
</section>
<script>
  setTimeout(() => {
    document.querySelector('#alert').remove()
  }, 2000);  
</script>